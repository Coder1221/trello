<div class = 'border border-gray-100'>
  <div class= "text-3xl">Log in</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="field">
      <%= f.label :Login , "Username or Email"%><br />
      <%= f.text_field :login ,autofocus: true , class: "rounded bg-white shadow-md py-2 px-3" %>
    </div>

    <div class="field"> 
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class: "rounded bg-white shadow-md py-2 px-3 text-gray-700" %>
    </div>
    

    <div class = 'py-2 flex items-center' >
      <%= f.submit "Submit" ,class: "bg-blue-500 hover:bg-blue-700 text-white font-bold rounded px-2 py-1" %>
      
      <% if devise_mapping.rememberable? %>
        <div class="field ml-11 ">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>