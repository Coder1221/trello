<%= link_to '<<Back' , boards_path%>
<h1>Reminders</h1>
<ul class="list-group">
    <li class="list-group-item active" aria-current="true">
        <p><%= "Board_name" %> --> <%= "List_name" %> --> <%= "Task"%> 
            <div class="float-right"> <%= "Status"%></div>
        </p>
    </li>
    
    <br>

    <% @reminders.each do|reminder| %>
        <li class="list-group-item active" aria-current="true">
            <p><%= reminder.board_name %> --> <%= reminder.list_name%> --> <%= reminder.task%> 
                <div class="float-right"> Status: <%= reminder.status%></div>
                <div class="float-right"> Due_date: <%= reminder.due_date.strftime("%d-%m-%Y")%></div>

            </p>
        </li>
        <br>
    <% end %>
</ul>