<% name = current_user.username %>
<h1>Welcome <%= name%></h1>

<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 140px;">

  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
    <svg class="bi me-2" width="16" height="16"><use xlink:href="#bootstrap"></use></svg>
    <span class="fs-4">Boards</span>
  </a>

  <hr>

  <div class="Board">
    <% @boards.each do |board| %>
      <table class="table">
        <tr> <%= board.name %> <tr>
      </table>
    <%end%>
  </div>
    
  <div class="Create_Board">
    <%= link_to('New Board' ,new_board_path(current_user.id) , class: 'action new')%>
  </div>
  
  <hr>
</div>