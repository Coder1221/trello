<h1> <%= @tasks.length>0 ? @tasks[0].board.name : "EMPTY BOARD " %> </h1>
<table>
<tr>
    <% @tasks.each do |task| %>
        <th>
            <div class="dropdown">

                <a class = "dropdown-item" href= <%= subtasks_path(task)%> > 
                    <h4><%= task.name %></h4>
                </a>
                
                <a class = "dropdown-item" href= <%= edit_task_path(task)%> >Edit</a>

                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= button_to "Delete" , task_path(task) , method: :delete %>
                </div>

                <a class = "dropdown-item">
                    <%= link_to("Add Todo",
                        {:controller =>'subtasks', :action => 'new'  , :id =>task.id  , :board_id => task.board_id}) 
                    %>
                </a>
            </div>
        </th>
    <%end%>
    <th>
        <td> <%= link_to("Create-List" , new_task_path(@board_id))%> </td>
    </th>
</tr>
</table>