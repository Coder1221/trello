<% name = current_user.username %>
<h1>Welcome <%= name %> </h1>

<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 140px;">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
    <svg class="bi me-2" width="16" height="16"><use xlink:href="#bootstrap"></use></svg>
    <span class="fs-4",style="display: inline-block">Boards </span>
  </a>

  <hr>

  <div class="Board">
    <% @boards.each do |board| %>
      <table class="table">
        <tr> <%= board.name %> <tr>
        <br>
        <tr> <%= link_to "Show Lists" , lists_path(board_id: board.id) %><tr>
        <br>

        <% unless current_user.has_role?(:viewer , board)%>
          <tr> <%= button_to "Delete" ,board_path(board),  data: { confirm: 'Are you sure you want to delete this alert?' } ,method: :delete %> </tr>
          <br>
          <tr> <%= button_to "Invite" ,new_user_invitation_path(current_user) , method: :get %> </tr>
          <br>
        <%end%>
      </table>
      <hr>
    <%end%>
  </div>
    
  <div>
    <%= link_to('New Board' ,new_board_path , class: 'action new')%>
  </div>
  
  <hr>
</div>